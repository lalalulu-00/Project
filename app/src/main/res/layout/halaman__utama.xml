<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home.Halaman_Utama"
    android:background="@drawable/ic_b">

    <TextView
        android:id="@+id/title_view"
        android:layout_width="501dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="56dp"
        android:layout_marginEnd="-56dp"
        android:text="= CHECK FACE SKIN ="
        android:textColor="@color/ungumuda"
        android:textSize="32sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="233dp"
        android:layout_height="278dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="90dp"
        android:layout_marginEnd="87dp"
        android:layout_marginBottom="68dp"
        app:srcCompat="@drawable/dokter" />

    <GridLayout
        android:layout_width="394dp"
        android:layout_height="432dp"
        android:layout_below="@id/title_view"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="170dp"
        android:layout_marginEnd="17dp"
        android:layout_marginBottom="19dp"
        android:columnCount="2"
        android:rowCount="2">

        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="130dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_gravity="center"
            app:cardBackgroundColor="#E2D1F4"
            app:cardCornerRadius="30dp">


            <ImageView
                android:id="@+id/imgskin"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/skin" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="110dp"
                android:text="Skin Check"
                android:textColor="@color/ungu"
                android:textStyle="bold" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/klikdata"
            android:layout_width="150dp"
            android:layout_height="130dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_gravity="center"
            app:cardBackgroundColor="#F8C1D4"
            app:cardCornerRadius="30dp"
            app:cardElevation="8dp">


            <ImageView
                android:id="@+id/imgdata"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:src="@drawable/instructions" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="110dp"
                android:text="Instruction"
                android:textColor="@color/ungu"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/kliksolusi"
            android:layout_width="150dp"
            android:layout_height="130dp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_gravity="center"
            app:cardBackgroundColor="#F8C1D4"
            app:cardCornerRadius="30dp">


            <ImageView
                android:id="@+id/imgsolusi"
                android:layout_width="110dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:src="@drawable/solusi" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginTop="110dp"
                android:text="Solution"
                android:textColor="@color/ungu"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="130dp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_gravity="center"
            app:cardBackgroundColor="#E2D1F4"
            app:cardCornerRadius="30dp"
            app:cardElevation="8dp">


            <ImageView
                android:id="@+id/imgartikel"
                android:layout_width="120dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:src="@drawable/artikek" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginTop="110dp"
                android:text="Artikel"
                android:textAlignment="center"
                android:textColor="@color/ungu"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>
    </GridLayout>

</RelativeLayout>